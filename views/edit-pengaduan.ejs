<!DOCTYPE html>
<html>
  <head>
    <title>Edit Pengaduan</title>
    <!-- Include Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
  </head>
  <body>
    <div class="container mt-5">
      <h2>Edit Pengaduan</h2>
      <form action="/submit-edit-pengaduan/<%= pengaduan.id_pengaduan %>" method="POST">
        <div class="form-group">
          <label for="jenisPengaduan">Jenis Pengaduan</label>
          <select class="form-control" id="jenisPengaduan" name="jenisPengaduan" required>
            <% kategoriData.forEach(kategori => { %>
              <option selected="<% kategori.jenis_pengaduan === pengaduan.jenis_pengaduan ? true : false %>" value="<%= kategori.jenis_pengaduan %>" <%= kategori.id_kategori === pengaduan.jenis_pengaduan ? 'selected' : '' %>><%= kategori.jenis_pengaduan %></option>
            <% }) %>
          </select>
        </div>
        <div class="form-group">
          <label for="tanggalPengaduan">Tanggal Pengaduan</label>
          <input
            type="date"
            class="form-control"
            id="tanggalPengaduan"
            name="tanggalPengaduan"
            value="<%= pengaduan.tgl_pengaduan.toISOString().split('T')[0] %>"
            required
          />
        </div>
        <div class="form-group">
          <label for="namaLengkap">Nama Lengkap</label>
          <input
            type="text"
            class="form-control"
            id="namaLengkap"
            name="namaLengkap"
            value="<%= pengaduan.nm_pengadu %>"
            required
          />
        </div>
        <div class="form-group">
          <label for="jenisKelamin">Jenis Kelamin</label>
          <select class="form-control" id="jenisKelamin" name="jenisKelamin" required>
            <option value="Laki-Laki" <%= pengaduan.jenis_kelamin === 'Laki-Laki' ? 'selected' : '' %>>Laki-Laki</option>
            <option value="Perempuan" <%= pengaduan.jenis_kelamin === 'Perempuan' ? 'selected' : '' %>>Perempuan</option>
          </select>
        </div>
        <div class="form-group">
          <label for="noKtp">No. KTP</label>
          <input
            type="text"
            class="form-control"
            id="noKtp"
            name="noKtp"
            value="<%= pengaduan.no_ktp %>"
            required
          />
        </div>
        <div class="form-group">
          <label for="alamat">Alamat</label>
          <input
            type="text"
            class="form-control"
            id="alamat"
            name="alamat"
            value="<%= pengaduan.alamat_pengadu %>"
            required
          />
        </div>
        <div class="form-group">
          <label for="pengaduan">Pengaduan</label>
          <input
            type="text"
            class="form-control"
            id="pengaduan"
            name="pengaduan"
            value="<%= pengaduan.pengaduan %>"
            required
          />
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </div>
  </body>
</html>
